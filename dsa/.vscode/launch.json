  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Module",
      "type": "python",
      "request": "launch",
      "env": {
        "PYTHONPATH": "src"
      },
      "module": "algorithms",
      "console": "internalConsole"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "env": {
        "PYTHONPATH": "src"
      },
      "args": ["${fileBasenameNoExtension}", "${relativeFileDirname}"],
      "request": "launch",
      "program": "src/.bin/run.py",
      "console": "internalConsole"
    }
  ]
}
